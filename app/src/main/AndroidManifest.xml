<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.faisal.diceroller">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recycler.RecyclerActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".AlertDIalogActivity" />
        <activity android:name=".fragment.FragmentHolderActiviy" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".mvvm.QuotesActivity" />
        <activity
            android:name=".roomviewmodel.WordActivity"
            android:label="@string/title_activity_word" />
        <activity android:name=".roomviewmodel.NewWordActivity"></activity>
    </application>

</manifest>